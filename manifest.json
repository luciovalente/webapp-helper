{
  "manifest_version": 3,
  "name": "WebApp Helper",
  "description": "Supporto alla navigazione di webapp single-page: ordinamento tabelle, colonne, filtri e preset.",
  "version": "0.1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "WebApp Helper",
    "default_popup": "src/popup.html"
  }
}
